@model Core.Dto.PMDb.Employee

@{
    ViewBag.Title = "Edit Employee";
    Layout = "~/Views/Shared/Template.cshtml";
}

@*<h2>Create</h2>*@

@using (Html.BeginForm("Edit", "Employee", FormMethod.Post, new { Class = "", Id = "formAddRoles" }))
{
 <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">@ViewBag.Title</h4>

    <div class="row">
        <div class="col-xxl">
            <div class="card mb-4">

                <div class="card-body">
                    <form>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-name"> First Name</label>
                            <div class="col-sm-10">
                                @Html.HiddenFor(model=>model.Id)

                                @Html.TextBoxFor(model=>model.Firstname,new {Class = "form-control",PlaceHolder = "",required = "true"  })
                            </div>

                        </div>

                            <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-name"> Last Name</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(model=>model.Lastname,new {Class = "form-control",PlaceHolder = "",required = "true"  })
                            </div>

                        </div>


                            <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-name"> Email</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(model=>model.Email,new {Class = "form-control",PlaceHolder = ""  })
                            </div>

                        </div>
                 
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-email"> Department</label>
                            <div class="col-sm-10">

                                <div class="col-sm-12">
                                   @Html.DropDownListFor(model => model.Departmentid, ViewBag.Department as IEnumerable<SelectListItem>, "", new { Class = "form-select  col-md-7 col-xs-12", required = "true" })

                                </div>



                            </div>
                        </div>


                         <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-email"> Position</label>
                            <div class="col-sm-10">

                                <div class="col-sm-12">
                                   @Html.DropDownListFor(model => model.Positionid, ViewBag.Position as IEnumerable<SelectListItem>, "", new { Class = "form-select  col-md-7 col-xs-12", required = "true" })

                                </div>



                            </div>
                        </div>


                              
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-email"> Is Active </label>
                            <div class="col-sm-10">

                                <div class="col-sm-12">

                                    @{
                                        if(Model.IsActive == 1)
                                        {
                                              <input type="checkbox" class="flat" name="IsActive" checked  />
                                        }
                                        else
                                        {
                                              <input type="checkbox" class="flat" name="IsActive"  />
                                        }
                                    }

                                
                                </div>



                            </div>
                        </div>


                    
                         <div class="demo-inline-spacing">
                            <button type="submit" class="btn btn-primary">
                             Save
                            </button>
                          
                            <button type="button" class="btn btn-warning" onclick="history.back()">
                              Cancel
                            </button>
                          </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
}