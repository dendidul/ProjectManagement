@model IEnumerable<Core.Dto.PMDb.ViewAllEmployee>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Template.cshtml";
}



<div class="card">
    <div class="card-header">
        <h5 class="">Employee</h5>
        <a href="@Url.Action("Create","Employee")" class="btn btn-primary">Create</a>
    </div>
    <div class="table-responsive text-nowrap">
         <table id="datatable" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Employee Name</th>
                            <th>Department Name</th>
                            <th>Position Name</th>
                            <th>Is Active</th>
                            <th>Action</th>
                        </tr>
                    </thead>

                    <tbody>
                        @{
                            foreach (var i in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(model => i.EmployeeName)</td>
                                    <td>@Html.DisplayFor(model => i.DepartmentName)</td>
                                    <td>@Html.DisplayFor(model => i.PositionName)</td>
                                    <td>
                                       
                                        @if (i.Is_Active == 1)
                                        {
                                            <span>Active</span>
                                        }
                                        else
                                        {
                                            <span>Non Active</span>
                                        }

                                    </td>
                                    <td>

                                        <a href="/Employee/Edit/@i.id" class="btn btn-warning btn-xs"><i class="fa fa-pencil"></i> Edit </a>
                                        <a href="/Employee/Details/@i.id" class="btn btn-info btn-xs"><i class="fa fa-folder"></i>View Details </a>
                                        <a href="/Employee/Delete/@i.id" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Delete </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
    </div>
</div>




@section scripts {
    <script type="text/javascript">
        $(document).ready(function() {
            $('#datatable').dataTable();
        });
    </script>
}
