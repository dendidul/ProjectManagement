@model Core.Dto.PMDb.Severity

@{
    ViewBag.Title = "Create Severity";
    Layout = "~/Views/Shared/Template.cshtml";
}

@*<h2>Create</h2>*@

@using (Html.BeginForm("Create", "Severity", FormMethod.Post, new { Class = "", Id = "formAddRoles" }))
{
 <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">@ViewBag.Title</h4>

    <div class="row">
        <div class="col-xxl">
            <div class="card mb-4">

                <div class="card-body">
                    <form>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-name"> Severity Name</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(model=>model.Severityname,new {Class = "form-control",PlaceHolder = "" })
                            </div>

                        </div>
                 
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-email"> Description</label>
                            <div class="col-sm-10">

                                <div class="col-sm-12">
                                    @Html.TextAreaFor(model=>model.Descripiton,new {Class = "form-control",PlaceHolder = "" })
                                </div>



                            </div>
                        </div>
                    
                         <div class="demo-inline-spacing">
                            <button type="submit" class="btn btn-primary">
                             Save
                            </button>
                          
                            <button type="button" class="btn btn-warning" onclick="history.back()">
                              Cancel
                            </button>
                          </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
}