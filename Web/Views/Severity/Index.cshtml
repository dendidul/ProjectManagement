@model IEnumerable<Core.Dto.PMDb.Severity>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Template.cshtml";
}


<div class="card">
    <div class="card-header">
        <h5 class="">Severity</h5>
        <a href="@Url.Action("Create","Severity")" class="btn btn-primary">Create</a>
    </div>
    <div class="table-responsive text-nowrap">
        
                <table id="datatable" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Severity Name</th>
                            <th>Description</th>
                            @*<th>Is Public</th>*@
                            <th>Action</th>
                        </tr>
                    </thead>

                    <tbody>
                        @{
                            foreach (var i in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(model => i.Severityname)</td>
                                    <td>@Html.DisplayFor(model => i.Descripiton)</td>
                                  
                                    <td>

                                        <a href="/Severity/Edit/@i.Id" class="btn btn-warning btn-xs"><i class="fa fa-pencil"></i> Edit </a>
                                        <a href="/Severity/Details/@i.Id" class="btn btn-info btn-xs"><i class="fa fa-folder"></i>View Details </a>
                                        <a href="/Severity/Delete/@i.Id" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Delete </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
    </div>
</div>




@section scripts {
    <script type="text/javascript">
        $(document).ready(function() {
            $('#datatable').dataTable();
        });
    </script>
}

