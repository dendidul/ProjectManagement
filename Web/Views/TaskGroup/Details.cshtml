@model Core.Dto.PMDb.Taskgroup

@{
    ViewBag.Title = "Create Roles";
    Layout = "~/Views/Shared/Template.cshtml";
}

@*<h2>Create</h2>*@

@using (Html.BeginForm("Create", "TaskGroup", FormMethod.Post, new { Class = "", Id = "formAddRoles" }))
{
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Details Task Group</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>


                    </ul>


                    <div class="clearfix"></div>
                </div>
                <div class="clearfix"></div>

                <div class="form-horizontal form-label-left input_mask">

                    <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
                            Task Group Name <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(model => model.Taskgroupname, new { Class = "form-control col-md-7 col-xs-12", disabled = "true" })
                            @*<input id="name" class="form-control col-md-7 col-xs-12" data-validate-length-range="6" data-validate-words="2" name="name" placeholder="both name(s) e.g Jon Doe" required="required" type="text">*@
                        </div>
                    </div>



                    <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
                            Description
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.TextAreaFor(model => model.Description, new { Class = "form-control col-md-7 col-xs-12", disabled = "true" })
                        </div>
                    </div>

                    <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
                            Project
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.DropDownListFor(model => model.Projectid, ViewBag.ProjectByEmployeeId as IEnumerable<SelectListItem>, "", new { Class = "form-control  col-md-7 col-xs-12", disabled = "true" })

                        </div>
                    </div>

                    <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
                            Start Date
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(model => model.Startdate,"{0:dd-MMM-yyyy}", new { Class = "form-control col-md-7 col-xs-12 datepicker", disabled = "true" })
                        </div>
                    </div>

                    <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
                            End Date
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(model => model.Enddate,"{0:dd-MMM-yyyy}", new { Class = "form-control col-md-7 col-xs-12 datepicker", disabled = "true" })
                        </div>
                    </div>

                    <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
                            Is Active
                        </label>
                        @if (Model.Isactive == true)
                        {
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="checkbox" checked class="flat" name="IsActive" disabled />
                            </div>
                        }
                        else
                        {
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="checkbox" class="flat" name="IsActive" disabled />
                            </div>
                        }

                    </div>


                    <div class="item form-group">
                        <div class="control-label col-md-5 col-sm-3 col-xs-12">
                            @*<input type="submit" class="btn btn-success" value="Submit" />*@
                            @*<button type="button" class="btn btn-warning">Back To List</button>*@
                            <a href="/TaskGroup/Index/" class="btn btn-warning">Back To List</a>
                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                        </div>


                    </div>

                </div>
            </div>
        </div>
    </div>
}

@section scripts {
    <script type="text/javascript">

        //$(document).ready(function ()
        //{
        //    alert($("#StartDate").val());
        //});
    </script>
}