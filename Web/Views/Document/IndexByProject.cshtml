@model IEnumerable<Core.Dto.PMDb.ViewDocumentByProject>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Template.cshtml";
}

@*<h2>Index</h2>*@



<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Project's Documents</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>


                </ul>


                <div class="clearfix"></div>
            </div>
            <div class="clearfix"></div>
            <a href="/Document/CreateDocumentByProject/" class="btn btn-primary">Input Document</a>
            @*<button class="btn btn-primary">Create Project</button>*@
            <div class="x_content">

                <table id="datatable" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Document</th>
                            <th>Project Name</th>
                            @*<th>Is Public</th>*@
                            <th>Action</th>
                        </tr>
                    </thead>

                    <tbody>
                        @{
                            foreach (var i in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(model => i.DocumentName)</td>
                                    <td>@Html.DisplayFor(model => i.ProjectsName)</td>
                                   
                                    <td>

                                        <a href="/Document/EditDocumentByProject/@i.id" class="btn btn-warning btn-xs"><i class="fa fa-pencil"></i> Edit </a>
                                        <a href="/Document/DetailsDocumentByProject/@i.id" class="btn btn-info btn-xs"><i class="fa fa-folder"></i>View Details </a>
                                        <a href="/Document/DeleteDocumentByProject/@i.id" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Delete </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



@section scripts {
    <script type="text/javascript">
            $(document).ready(function () {
                $('#datatable').dataTable();
            });
    </script>
}
