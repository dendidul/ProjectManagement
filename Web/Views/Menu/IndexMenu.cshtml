@model IEnumerable<Core.Dto.PMDb.Menu>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Template.cshtml";
}



<div class="card">
    <div class="card-header">
        <h5 class="">Menu</h5>
        <a href="@Url.Action("CreateMenu","Menu")" class="btn btn-primary">Create</a>
    </div>
    <div class="table-responsive text-nowrap">
         <table id="datatable" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Menu Name</th>
                            <th>Link Group</th>
                            <th>Controller</th>
                            <th>Action</th>
                        </tr>
                    </thead>

                    <tbody>
                        @{
                            foreach (var i in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(model => i.Menuname)</td>
                                    <td>@Html.DisplayFor(model => i.Link)</td>
                                    <td>
                                        @Html.DisplayFor(model => i.Controllername)
                                      

                                    </td>
                                    <td>

                                        <a href="/Menu/EditMenu/@i.Id" class="btn btn-warning btn-xs"><i class="fa fa-pencil"></i> Edit </a>
                                        <a href="/Menu/DetailsMenu/@i.Id" class="btn btn-info btn-xs"><i class="fa fa-folder"></i>View Details </a>
                                        <a href="/Menu/DeleteMenu/@i.Id" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Delete </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
    </div>
</div>




@section scripts {
    <script type="text/javascript">
        $(document).ready(function() {
            $('#datatable').dataTable();
        });
    </script>
}
