@model IEnumerable<Core.Dto.PMDb.ViewAllProject>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Template.cshtml";
}

@*<h2>Index</h2>*@

   

        <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Projects</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                       
                        
                    </ul>
                    

                    <div class="clearfix"></div>
                </div>
                <div class="clearfix"></div>
                <a href="/Project/Create/" class="btn btn-primary">Create Project</a>
                @*<button class="btn btn-primary">Create Project</button>*@
                <div class="x_content">
                   
                    <table id="datatable" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Project Name</th>
                                <th>Project Group</th>
                                <th>Is Public</th>
                                <th>Action</th>
                            </tr>
                        </thead>

                        <tbody>
                            @{
                                foreach(var i in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(model => i.ProjectName)</td>
                                        <td>@Html.DisplayFor(model => i.ProjectGroupName)</td>
                                        <td>
                                            @*@Html.DisplayFor(model => i.IsPublic)*@
                                            @if(i.IsPublic == true)
                                            {
                                                <span>Public</span>
                                            }
                                            else
                                            {
                                                <span>Non Public</span>
                                            }
                                        
                                        </td>
                                        <td>
                                           
                                            <a href="/Project/Edit/@i.ProjectId" class="btn btn-warning btn-xs"><i class="fa fa-pencil"></i> Edit </a>
                                            <a href="/Project/Details/@i.ProjectId" class="btn btn-info btn-xs"><i class="fa fa-folder"></i>View Details </a>
                                            <a href="/Project/Delete/@i.ProjectId" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Delete </a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

 

    @section scripts {
        <script type="text/javascript">
            $(document).ready(function () {
                $('#datatable').dataTable();
            });
        </script>
    }
