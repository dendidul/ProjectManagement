@model IEnumerable<Core.Dto.PMDb.UserProjectModel>

@{
    ViewBag.Title = "ProjectUsers";
    Layout = "~/Views/Shared/Template.cshtml";
}


<div class="row">
    <div class="col-md-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Users</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <a href="#">Settings 1</a>
                            </li>
                            <li>
                                <a href="#">Settings 2</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
                <div class="x_content">
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12 text-center">

                        </div>
                        <div class="clearfix"></div>

                        @{

                            foreach (var i in Model)
                            {
                                <div class="col-md-4 col-sm-4 col-xs-12 profile_details">
                                    <div class="well profile_view">
                                        <div class="col-sm-12">
                                            <h4 class="brief"><i>@Html.DisplayFor(model => i.RolesName)</i></h4>
                                            <div class="left col-xs-7">
                                                @*<h2>@Html.DisplayFor(model => i.EmployeeId)</h2>*@
                                                <h2>@Html.DisplayFor(model=>i.EmployeeName)</h2>
                                                @*<p><strong>About: </strong> Web Designer / UX / Graphic Artist / Coffee Lover </p>*@
                                                <ul class="list-unstyled">
                                                    <li><i class="fa fa-building"></i> Email : @i.Email </li>
                                                    <li><i class="fa fa-briefcase"></i> Position : @i.PositionName</li>
                                                    <li><i class="fa fa-briefcase"></i> Department : @i.DepartmentName</li>
                                                   
                                                </ul>
                                            </div>
                                            <div class="right col-xs-5 text-center">
                                                @*<img src="@i.PhotoUrl" alt="" class="img-circle img-responsive">*@
                                                @if (i.PhotoUrl != null && i.PhotoUrl != "#")
                                                {
                                                    <img src="@i.PhotoUrl" alt="" class="img-circle img-responsive">
                                                }
                                                else
                                                {
                                                    <img src="~/Images/photo.jpg" alt="" class="img-circle img-responsive">
                                                }
                                            </div>
                                        </div>
                                        <div class="col-xs-12 bottom text-center">
                                            <div class="col-xs-12 col-sm-6 emphasis">
                                               
                                            </div>
                                            <div class="col-xs-12 col-sm-6 emphasis">
                                                @*<button type="button" class="btn btn-success btn-xs">
                                                    <i class="fa fa-user">
                                                    </i> <i class="fa fa-comments-o"></i>
                                                </button>*@
                                                <a href="/Profile/ViewProfile/@i.EmployeeId" class="btn btn-success btn-xs">
                                                    <i class=" fa fa-user">
                                                    </i> View Profile
                                                </a>
                                                    @*<button type="button" class="btn btn-primary btn-xs">

            </button>*@
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }

                                            }


</div>
                </div>
            </div>
    </div>
</div>
