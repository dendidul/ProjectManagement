@model IEnumerable<Core.Dto.PMDb.Status>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Template.cshtml";
}




<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Status</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>


                </ul>


                <div class="clearfix"></div>
            </div>
            <div class="clearfix"></div>
            @*<a href="/Status/Create/" class="btn btn-primary">Create Status</a>*@
            <a href="javascript:;" onclick="ShowModalForm('/Status/CreateForm/', '#myModal', '')" class="btn btn-primary">Create Status</a>  
            <div class="x_content">

                <table id="datatable" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Status Name</th>
                            <th>Description</th>
                            @*<th>Is Public</th>*@
                            <th>Action</th>
                        </tr>
                    </thead>

                    <tbody>
                        @{
                            foreach (var i in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(model => i.Statusname)</td>
                                    <td>@Html.DisplayFor(model => i.Description)</td>

                                    <td>

                                        <a href="/Status/Edit/@i.Id" class="btn btn-warning btn-xs"><i class="fa fa-pencil"></i> Edit </a>
                                        <a href="/Status/Details/@i.Id" class="btn btn-info btn-xs"><i class="fa fa-folder"></i>View Details </a>
                                        <a href="/Status/Delete/@i.Id" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Delete </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



@section scripts {
    <script type="text/javascript">
        function ShowModalForm(url, form, row) {
            //iRow = GetRowIndex(row);
            var jsonRequest = {};

            $.xResponseHtml(url, JSON.stringify({ request: jsonRequest }), form);
            $(form).modal();
        }

            $(document).ready(function () {
                $('#datatable').dataTable();

              

            });



    </script>
}
